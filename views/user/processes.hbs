<link rel="stylesheet" href="/stylesheets/confirmationCode.css">
<div class="m-5"  style="min-height: 90vh">
<div class="container-fluid mx-5 d-flex justify-content-start flex-wrap" style="max-width: 90vw">
{{#each user.processes}}
<div class="card m-3" style="width: 300px;">
    <div class="card-body text-center">
        <h5 class="card-title">{{title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{jobRole}}</h6>
        <p class="card-text">
            <p>{{hierarchyOfRole}}</p>
        </p>
        <a href="/user/processes/show/{{_id}}" class="card-link">Go to the process</a>
    </div>
</div>
{{/each}}
</div>
</div>